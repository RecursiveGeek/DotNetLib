<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>RecursiveGeek.DotNetLib.Network</RootNamespace>
    <ApplicationIcon>Images\network.ico</ApplicationIcon>
    <Version>1.5.1</Version>
    <Authors>RecursiveGeeks</Authors>
    <Company>RecursiveGeeks</Company>
    <Product>RecursiveGeek.DotNetLib</Product>
    <Copyright>Copyright © 2016-2019, All Rights Reserved</Copyright>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/RecursiveGeek/DotNetLib</PackageProjectUrl>
    <PackageIconUrl></PackageIconUrl>
    <RepositoryUrl>https://github.com/RecursiveGeek/DotNetLib</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <Description>Helper library to add centralized functionality with Web API and networking</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile></PackageLicenseFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>network.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Images\network.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="codesign.bat &quot;$(TargetPath)&quot;" />
  </Target>

</Project>
